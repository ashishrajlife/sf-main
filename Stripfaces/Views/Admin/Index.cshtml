                    console.error('Failed to load videos:', response.status);
                    showNotification('Failed to load videos', 'error');
                }
            } catch (error) {
                console.error('Error loading videos:', error);
                showNotification('Error loading videos: ' + error.message, 'error');
            }
        }

        // Render videos in table (FIXED property names)
        function renderVideos(videos) {
            console.log('Rendering videos:', videos);
            const tbody = document.getElementById('videoTableBody');
            const emptyState = document.getElementById('emptyState');

            if (!videos || videos.length === 0) {
                console.log('No videos to display');
                emptyState.style.display = 'block';
                tbody.innerHTML = '';
                return;
            }

            emptyState.style.display = 'none';

            tbody.innerHTML = videos.map(video => {
                console.log('Processing video:', video);

                // Safely get properties with fallbacks
                const videoId = video.videoId || video.VideoId || 0;
                const title = video.title || video.Title || 'No Title';
                const description = video.description || video.Description || '';
                const thumbnail = video.thumbnail || video.thumbnailPath || '/images/default-thumbnail.jpg';
                const modelName = video.modelName || (video.model ? video.model.name : 'Unknown');
                const views = video.views || video.Views || 0;
                const duration = video.durationFormatted || formatDuration(video.duration) || '00:00';
                const uploadedAt = video.uploadedAt ||
                                   (video.uploadedDate && video.uploadedTime ?
                                    `${video.uploadedDate}<br><small>${video.uploadedTime}</small>` :
                                    'Unknown');

                return `
                    <tr data-id="${videoId}">
                        <td>
                            <img src="${thumbnail}"
                                 alt="${title}" class="video-thumbnail">
                        </td>
                        <td>
                            <div class="video-info">
                                <h4>${title}</h4>
                                <p>${duration} • ${views} views</p>
                                ${description ? `<small>${description}</small>` : ''}
                            </div>
                        </td>
                        <td>${modelName}</td>
                        <td>${views}</td>
                        <td>${uploadedAt}</td>
                        <td>
                            <button class="btn-delete" onclick="deleteVideo(${videoId})">
                                <i class="fas fa-trash"></i> Delete
                            </button>
                        </td>
                    </tr>
                `;
            }).join('');

            console.log('Videos rendered successfully');
        }

        // Delete video
        async function deleteVideo(id) {
            if (!confirm('Are you sure you want to delete this video?')) return;

            try {
                console.log('Deleting video ID:', id);
                const response = await fetch(`/Admin/DeleteVideo/${id}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': getCSRFToken()
                    }
                });

                const result = await response.json();
                console.log('Delete response:', result);

                if (result.success) {
                    showNotification(result.message || 'Video deleted successfully!', 'success');
                    loadVideos(); // Refresh the list
                } else {
                    showNotification(result.message || 'Failed to delete video', 'error');
                }
            } catch (error) {
                console.error('Error deleting video:', error);
                showNotification('Error deleting video: ' + error.message, 'error');
            }
        }

        // Form submission handling
             // Form submission handling - UPDATED
        document.getElementById('videoUploadForm').addEventListener('submit', async function(e) {
