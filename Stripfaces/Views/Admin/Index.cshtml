    <script>
        // Initialize on page load
        document.addEventListener('DOMContentLoaded', () => {
            console.log('Admin page loaded');
            loadModels();
            loadVideos();
        });

        // CSRF token for AJAX requests
        function getCSRFToken() {
            // Try to get from meta tag
            const metaToken = document.querySelector('meta[name="__RequestVerificationToken"]');
            if (metaToken) {
                return metaToken.content;
            }

            // Try to get from form input
            const tokenElement = document.querySelector('input[name="__RequestVerificationToken"]');
            if (tokenElement && tokenElement.value) {
                return tokenElement.value;
            }

            console.warn('CSRF token not found');
            return '';
        }

        // Tab switching
        document.querySelectorAll('.tab-btn').forEach(btn => {
            btn.addEventListener('click', () => {
                document.querySelectorAll('.tab-btn').forEach(b => b.classList.remove('active'));
                document.querySelectorAll('.tab-content').forEach(c => c.classList.remove('active'));

                btn.classList.add('active');
                const tabId = btn.getAttribute('data-tab');
                document.getElementById(tabId).classList.add('active');

                // Load data when switching to management tab
                if (tabId === 'management') {
                    console.log('Loading videos for management tab');
                    loadVideos();
                }
            });
        });

        // File upload interactions
        document.getElementById('videoUploadArea').addEventListener('click', () => {
            document.getElementById('VideoFile').click();
        });

        document.getElementById('thumbnailUploadArea').addEventListener('click', () => {
            document.getElementById('ThumbnailFile').click();
        });

        document.getElementById('VideoFile').addEventListener('change', function(e) {
            const fileName = e.target.files.length > 0 ? e.target.files[0].name : '';
            document.getElementById('videoFileName').textContent = fileName;

            // Show file size
            if (e.target.files[0]) {
                const fileSize = e.target.files[0].size;
                const fileSizeMB = (fileSize / (1024 * 1024)).toFixed(2);
                document.getElementById('videoFileName').textContent = `${fileName} (${fileSizeMB} MB)`;
            }
        });

        document.getElementById('ThumbnailFile').addEventListener('change', function(e) {
            const fileName = e.target.files.length > 0 ? e.target.files[0].name : '';
            document.getElementById('thumbnailName').textContent = fileName;
        });

        // Load models from backend
        async function loadModels() {
            try {
                console.log('Loading models...');
                const response = await fetch('/Admin/GetModels');
                console.log('Models response status:', response.status);

                if (response.ok) {
                    const result = await response.json();
                    console.log('Models result:', result);

                    if (result.success && result.data) {
                        const models = result.data;

                        // Populate model dropdown in upload form
                        const modelSelect = document.getElementById('ModelId');
                        modelSelect.innerHTML = '<option value="" disabled selected>-- Select Model --</option>' +
                            models.map(model =>
                                `<option value="${model.ModelId}">${model.Name}</option>`
                            ).join('');

                        // Populate model filter in management
                        const modelFilter = document.getElementById('modelFilter');
                        modelFilter.innerHTML = '<option value="">All Models</option>' +
                            models.map(model =>
                                `<option value="${model.Name}">${model.Name}</option>`
                            ).join('');

                        console.log('Models loaded successfully');
                    }
                } else {
                    console.error('Failed to load models:', response.status);
                    showNotification('Failed to load models', 'error');
                }
            } catch (error) {
                console.error('Error loading models:', error);
                showNotification('Error loading models: ' + error.message, 'error');
            }
        }


                    // Load all models for management
            async function loadAllModels() {
                try {
                    console.log('Loading all models...');
                    const response = await fetch('/Admin/GetAllModels');
                    console.log('All models response status:', response.status);

                    if (response.ok) {
                        const result = await response.json();
                        console.log('All models result:', result);

                        if (result.success && result.data) {
                            renderModels(result.data);
                            console.log('Models loaded successfully');
                        } else {
                            console.error('Failed to load models:', result.message);
                            showNotification('Failed to load models: ' + (result.message || 'Unknown error'), 'error');
                        }
                    } else {
                        console.error('Failed to load models:', response.status);
                        showNotification('Failed to load models', 'error');
                    }
                } catch (error) {
                    console.error('Error loading models:', error);
                    showNotification('Error loading models: ' + error.message, 'error');
                }
            }

            // Render models in table
                    // Render models in table
        function renderModels(models) {
            console.log('Rendering models:', models);
            const tbody = document.getElementById('modelTableBody');
            const emptyState = document.getElementById('modelEmptyState');

            if (!models || models.length === 0) {
                console.log('No models to display');
                emptyState.style.display = 'block';
                tbody.innerHTML = '';
                return;
            }

            emptyState.style.display = 'none';

            tbody.innerHTML = models.map(model => {
                const modelId = model.modelId || model.ModelId || 0;
                const name = model.name || model.Name || 'No Name';
                const bio = model.bio || model.Bio || 'No bio provided';
                const profilePic = model.profilePic || '/images/default-model.jpg';
                const videoCount = model.videoCount || model.VideoCount || 0;
                const isActive = model.isActive !== undefined ? model.isActive : true;
                const createdAt = model.createdAt || 'Unknown';

                return `
                    <tr data-id="${modelId}">
                        <td>
                            <img src="${profilePic}"
                                 alt="${name}" class="model-profile-pic">
                        </td>
                        <td>
                            <div class="model-info">
                                <h4>${name}</h4>
                                <p>${bio.length > 100 ? bio.substring(0, 100) + '...' : bio}</p>
                            </div>
                        </td>
                        <td>${videoCount} videos</td>
                        <td>
                            <span class="status-badge ${isActive ? 'status-active' : 'status-inactive'}">
                                ${isActive ? 'Active' : 'Inactive'}
                            </span>
                        </td>
                        <td>${createdAt}</td>
                        <td>
                            <div class="action-buttons">
                                <button class="btn-edit" onclick="openEditModal(${modelId})">
                                    <i class="fas fa-edit"></i> Edit
                                </button>
                                <button class="btn-toggle ${isActive ? '' : 'inactive'}"
                                        onclick="toggleModelStatus(${modelId}, ${isActive})">
                                    <i class="fas ${isActive ? 'fa-toggle-on' : 'fa-toggle-off'}"></i>
                                    ${isActive ? 'Deactivate' : 'Activate'}
                                </button>
                                <button class="btn-delete" onclick="deleteModel(${modelId})"
                                        ${videoCount > 0 ? 'disabled title="Cannot delete model with videos"' : ''}>
                                    <i class="fas fa-trash"></i> Delete
                                </button>
                            </div>
                        </td>
                    </tr>
                `;
            }).join('');

