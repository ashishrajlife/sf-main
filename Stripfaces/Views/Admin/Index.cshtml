        // Load videos from backend
        async function loadVideos() {
            try {
                console.log('Loading videos...');
                const response = await fetch('/Admin/GetVideos');
                console.log('Videos response status:', response.status);

                if (response.ok) {
                    const result = await response.json();
                    console.log('Videos result:', result);

                    if (result.success && result.data) {
                        renderVideos(result.data);
                        console.log('Videos loaded successfully');
                    } else {
                        console.error('Failed to load videos:', result.message);
                        showNotification('Failed to load videos: ' + (result.message || 'Unknown error'), 'error');
                    }
