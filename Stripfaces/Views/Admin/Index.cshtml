@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="welcome-section">
    <h1>Welcome, Admin @ViewData["Username"]!</h1>
    <p style="color: var(--gray-dark); margin-top: 0.5rem;">
        Admin Dashboard - Manage your streaming platform
    </p>
</div>

<div class="dashboard-grid">
    <div class="stat-card">
        <div class="stat-icon">
            <i class="fas fa-users"></i>
        </div>
        <div class="stat-info">
            <h3 id="totalUsers">0</h3>
            <p>Total Users</p>
        </div>
    </div>

    <div class="stat-card">
        <div class="stat-icon">
            <i class="fas fa-user-shield"></i>
        </div>
        <div class="stat-info">
            <h3 id="adminCount">0</h3>
            <p>Admins</p>
        </div>
    </div>

    <div class="stat-card">
        <div class="stat-icon">
            <i class="fas fa-video"></i>
        </div>
        <div class="stat-info">
            <h3>1,258</h3>
            <p>Total Videos</p>
        </div>
    </div>

    <div class="stat-card">
        <div class="stat-icon">
            <i class="fas fa-eye"></i>
        </div>
        <div class="stat-info">
            <h3>24.5K</h3>
            <p>Total Views</p>
        </div>
    </div>
</div>

<div style="display: grid; grid-template-columns: 2fr 1fr; gap: 2rem; margin-top: 2.5rem;">
    <div class="card">
        <h2 style="margin-bottom: 1.5rem;">Recent Activity</h2>
        <div style="display: flex; flex-direction: column; gap: 1rem;">
            <div style="display: flex; align-items: center; gap: 1rem; padding: 1rem; background: var(--gray-light); border-radius: 8px;">
                <div style="width: 40px; height: 40px; background: var(--primary-blue); color: white; border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                    <i class="fas fa-user-plus"></i>
                </div>
                <div>
                    <p style="font-weight: 500;">New user registered</p>
                    <p style="color: var(--gray-dark); font-size: 0.875rem;">john_doe joined the platform</p>
                </div>
                <span style="margin-left: auto; color: var(--gray-dark); font-size: 0.875rem;">2 hours ago</span>
            </div>

            <div style="display: flex; align-items: center; gap: 1rem; padding: 1rem; background: var(--gray-light); border-radius: 8px;">
                <div style="width: 40px; height: 40px; background: #10b981; color: white; border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                    <i class="fas fa-video"></i>
                </div>
                <div>
                    <p style="font-weight: 500;">Video uploaded</p>
                    <p style="color: var(--gray-dark); font-size: 0.875rem;">New movie added to library</p>
                </div>
                <span style="margin-left: auto; color: var(--gray-dark); font-size: 0.875rem;">5 hours ago</span>
            </div>
        </div>
    </div>

    <div class="card">
        <h2 style="margin-bottom: 1.5rem;">Quick Actions</h2>
        <div style="display: flex; flex-direction: column; gap: 1rem;">
            <a href="@Url.Action("Users", "Admin")" class="btn-primary" style="text-align: left;">
                <i class="fas fa-users"></i> Manage Users
            </a>
            <a href="#" class="btn-primary" style="text-align: left; background: #10b981;">
                <i class="fas fa-video"></i> Upload Video
            </a>
            <a href="#" class="btn-primary" style="text-align: left; background: #8b5cf6;">
                <i class="fas fa-chart-line"></i> View Analytics
            </a>
            <a href="#" class="btn-primary" style="text-align: left; background: #f59e0b;">
                <i class="fas fa-cog"></i> Settings
            </a>
        </div>
    </div>
</div>

<div class="card" style="margin-top: 2rem;">
    <h2 style="margin-bottom: 1.5rem;">System Status</h2>
    <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 1.5rem;">
        <div>
            <p style="font-weight: 500;">Server Uptime</p>
            <p style="color: var(--primary-blue); font-size: 1.5rem; font-weight: 600;">99.8%</p>
        </div>
        <div>
            <p style="font-weight: 500;">Active Users</p>
            <p style="color: var(--primary-blue); font-size: 1.5rem; font-weight: 600;">342</p>
        </div>
        <div>
            <p style="font-weight: 500;">Storage Used</p>
            <p style="color: var(--primary-blue); font-size: 1.5rem; font-weight: 600;">78%</p>
        </div>
        <div>
            <p style="font-weight: 500;">Bandwidth</p>
            <p style="color: var(--primary-blue); font-size: 1.5rem; font-weight: 600;">2.4TB</p>
        </div>
    </div>
</div>

<script>
    // Simulate loading stats
    document.addEventListener('DOMContentLoaded', function() {
        setTimeout(() => {
            document.getElementById('totalUsers').textContent = '1,254';
            document.getElementById('adminCount').textContent = '5';
        }, 500);
    });
</script>