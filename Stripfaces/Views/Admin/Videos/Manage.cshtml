@page
@using stripfaces.Models
@model List<Video>

@{
    ViewData["Title"] = "Manage Videos";
}

<div class="container">
    <h2>Manage Videos</h2>
    
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">
            @TempData["Success"]
        </div>
    }
    
    <div class="text-end mb-3">
        <a href="@Url.Action("Upload", "AdminVideos")" class="btn btn-primary">
            <i class="fas fa-upload"></i> Upload New Video
        </a>
    </div>
    
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Thumbnail</th>
                    <th>Title</th>
                    <th>Model</th>
                    <th>Views</th>
                    <th>Uploaded</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var video in Model.OrderByDescending(v => v.UploadedAt))
                {
                    <tr>
                        <td>@video.VideoId</td>
                        <td>
                            <img src="@(video.ThumbnailPath ?? "/images/default-thumbnail.jpg")" 
                                 alt="Thumbnail" style="width: 80px; height: 45px; object-fit: cover;">
                        </td>
                        <td>@video.Title</td>
                        <td>@video.Model?.Name</td>
                        <td>@video.Views</td>
                        <td>@video.UploadedAt.ToString("MMM dd, yyyy")</td>
                        <td>
                            @if (video.IsApproved)
                            {
                                <span class="badge bg-success">Approved</span>
                            }
                            else
                            {
                                <span class="badge bg-warning">Pending</span>
                            }
                            @if (video.IsFeatured)
                            {
                                <span class="badge bg-info ms-1">Featured</span>
                            }
                        </td>
                        <td>
                            <div class="btn-group btn-group-sm">
                                <a href="@Url.Action("Watch", "User", new { id = video.VideoId })" 
                                   class="btn btn-outline-primary" target="_blank">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a href="#" class="btn btn-outline-warning">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <form method="post" 
                                      action="@Url.Action("Delete", "AdminVideos", new { id = video.VideoId })"
                                      onsubmit="return confirm('Are you sure you want to delete this video?');">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-outline-danger">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    
    @if (!Model.Any())
    {
        <div class="text-center py-5">
            <i class="fas fa-video-slash fa-3x text-muted mb-3"></i>
            <h4>No videos uploaded yet</h4>
            <p class="text-muted">Start by uploading your first video</p>
            <a href="@Url.Action("Upload", "AdminVideos")" class="btn btn-primary">
                <i class="fas fa-upload"></i> Upload Video
            </a>
        </div>
    }
</div>