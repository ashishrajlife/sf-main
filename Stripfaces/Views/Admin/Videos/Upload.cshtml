@using stripfaces.Models
@model VideoUploadViewModel

<h2>Upload Video</h2>

<form method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label>Select Model</label>
        <select asp-for="ModelId" asp-items="Model.Models" class="form-control">
            <option value="">-- Select Model --</option>
        </select>
    </div>

    <div class="form-group">
        <label>Video Title</label>
        <input asp-for="Title" class="form-control" />
    </div>

    <div class="form-group">
        <label>Description</label>
        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
    </div>

    <div class="form-group">
        <label>Video File (Max 2GB)</label>
        <input type="file" asp-for="VideoFile" class="form-control" accept="video/*" />
    </div>

    <div class="form-group">
        <label>Thumbnail (Optional)</label>
        <input type="file" asp-for="ThumbnailFile" class="form-control" accept="image/*" />
    </div>

    <button type="submit" class="btn btn-primary">Upload Video</button>
</form>