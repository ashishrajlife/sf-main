    }

        .video-card:hover {
            transform: translateY(-6px);
            border-color: #ffc107;
            box-shadow: 0 12px 30px rgba(0, 0, 0, 0.9), 0 0 18px rgba(255, 193, 7, 0.25);
        }

        .video-card a {
            text-decoration: none;
            color: white;
            display: block;
        }

        .thumbnail {
            position: relative;
            overflow: hidden;
            border-bottom: 1px solid rgba(255, 193, 7, 0.25);
            border-radius:14px;
        }

