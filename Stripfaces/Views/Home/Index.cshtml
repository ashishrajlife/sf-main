        transform: scale(1.05);
    }

    .duration {
        position: absolute;
        bottom: 10px;
        right: 10px;
        background: rgba(0, 0, 0, 0.75);
        color: #ffc107;
        padding: 4px 8px;
        font-size: 12px;
        border-radius: 6px;
        font-weight: 600;
        border: 2px solid white;
    }

    .video-card h4 {
        font-size: 16px;
        font-weight: 600;
        margin: 12px 12px 4px;
        color: #ffffff;
        line-height: 1.4;
    }

    .model-name {
        margin: 0 12px;
        font-size: 13px;
        font-weight: 500;
        color: #ffc107;
        opacity: 0.9;
    }

    /* Meta text */
    .video-card p {
        margin: 6px 12px 12px;
        font-size: 12px;
        color: #b5b5b5;
    }

    /* ===== FEATURED BADGE ===== */
    .featured-badge {
        position: absolute;
        top: 12px;
        left: 12px;
        background: linear-gradient(135deg, #ffc107, #ffb300);
        color: #000;
        font-size: 11px;
        font-weight: 700;
        padding: 4px 10px;
        border-radius: 20px;
        letter-spacing: 0.4px;
        box-shadow: 0 0 12px rgba(255, 193, 7, 0.5);
    }

    .recent-videos-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
    }

        .recent-videos-header h2 {
            margin: 0;
        }

    .view-all-link {
        color: #4a6cf7;
        text-decoration: none;
        font-weight: 500;
        font-size: 14px;
    }

        .view-all-link:hover {
            text-decoration: underline;
        }

    .featured-badge {
        position: absolute;
        top: 10px;
        left: 10px;
        background: linear-gradient(135deg, #ff6b6b, #ff8e53);
        color: white;
        padding: 3px 8px;
        border-radius: 4px;
        font-size: 11px;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .video-card {
        position: relative;
    }

    /* If you want a carousel/slider for recent videos */
    .recent-videos-slider {
        display: flex;
        overflow-x: auto;
        gap: 20px;
        padding: 10px 0;
        scrollbar-width: thin;
    }

        .recent-videos-slider::-webkit-scrollbar {
            height: 6px;
        }

        .recent-videos-slider::-webkit-scrollbar-track {
            background: #f1f5f9;
            border-radius: 10px;
        }

        .recent-videos-slider::-webkit-scrollbar-thumb {
            background: #c7d2fe;
            border-radius: 10px;
        }

        .recent-videos-slider .video-card {
            flex: 0 0 auto;
            width: 280px;
        }
</style>