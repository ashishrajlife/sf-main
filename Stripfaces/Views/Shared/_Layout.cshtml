        /* Animation for logo */
        @@keyframes glow {
            0%, 100% {
                text-shadow: 0 0 10px rgba(255, 215, 0, 0.3);
            }

            50% {
                text-shadow: 0 0 20px rgba(255, 215, 0, 0.6);
            }
        }

        .logo {
            animation: glow 3s ease-in-out infinite;
        }

        /* Mobile Sidebar */
        .mobile-menu-btn {
            display: none;
            background: none;
            border: none;
            color: var(--yellow-primary);
            font-size: 24px;
            cursor: pointer;
            padding: 10px;
            transition: all 0.2s ease;
        }

        .mobile-menu-btn:hover {
            transform: scale(1.1);
        }

        .mobile-sidebar {
            display: none;
            position: fixed;
            left: 0;
            top: 0;
            width: 280px;
            height: 100vh;
            background: var(--black-card);
            z-index: 10001;
            flex-direction: column;
            border-right: 1px solid var(--black-border);
            overflow-y: auto;
            animation: slideInLeft 0.3s ease;
        }

        .mobile-sidebar.active {
            display: flex;
        }

        .sidebar-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 20px;
            border-bottom: 1px solid var(--black-border);
        }

        .sidebar-header .logo {
            margin: 0;
            font-size: 18px;
            animation: none;
        }

        .sidebar-close {
            background: none;
            border: none;
            color: var(--text-muted);
            font-size: 32px;
            cursor: pointer;
            padding: 0;
            transition: all 0.2s ease;
            line-height: 1;
        }

        .sidebar-close:hover {
            color: var(--yellow-primary);
            transform: rotate(90deg);
        }

        .sidebar-user {
            display: flex;
            align-items: center;
            gap: 15px;
            padding: 20px;
            border-bottom: 1px solid var(--black-border);
        }

        .user-avatar-sidebar {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            background: linear-gradient(135deg, var(--yellow-primary), var(--yellow-dark));
            display: flex;
            align-items: center;
            justify-content: center;
            border: 2px solid var(--yellow-primary);
            color: #000;
            font-weight: bold;
            font-size: 18px;
        }

        .sidebar-user-info {
            flex: 1;
        }

        .sidebar-user-name {
            margin: 0;
            font-weight: 600;
            color: var(--yellow-primary);
            font-size: 14px;
        }

        .sidebar-user-role {
            margin: 4px 0 0 0;
            color: var(--text-muted);
            font-size: 12px;
        }

        .sidebar-footer {
            padding: 20px;
            border-top: 1px solid var(--black-border);
            margin-top: auto;
        }

        .btn-logout-sidebar {
            width: 100%;
            background: linear-gradient(135deg, #ff6b6b, #ff5252);
            color: white;
            border: none;
            padding: 12px 16px;
            border-radius: 6px;
            cursor: pointer;
            font-weight: 600;
            font-size: 14px;
            transition: all 0.2s ease;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
            text-decoration: none;
        }

        .btn-logout-sidebar:hover {
            background: linear-gradient(135deg, #ff5252, #ff4c4c);
            transform: translateY(-2px);
        }

        .sidebar-auth-buttons {
            display: flex;
            flex-direction: column;
            gap: 12px;
        }

        .btn-sidebar-login {
            width: 100%;
            background: transparent;
            color: var(--yellow-primary);
            border: 2px solid var(--yellow-primary);
            padding: 12px 16px;
            border-radius: 6px;
            cursor: pointer;
            font-weight: 600;
            font-size: 14px;
            transition: all 0.2s ease;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
            text-decoration: none;
        }

        .btn-sidebar-login:hover {
            background: rgba(255, 215, 0, 0.1);
            color: var(--yellow-hover);
            border-color: var(--yellow-hover);
            transform: translateY(-2px);
        }

        .btn-sidebar-register {
            width: 100%;
            background: var(--yellow-primary);
            color: #000;
            border: 2px solid var(--yellow-primary);
            padding: 12px 16px;
            border-radius: 6px;
            cursor: pointer;
            font-weight: 600;
            font-size: 14px;
            transition: all 0.2s ease;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
            text-decoration: none;
        }

        .btn-sidebar-register:hover {
            background: var(--yellow-hover);
            border-color: var(--yellow-hover);
            transform: translateY(-2px);
        }

        .sidebar-overlay {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(0,0,0,0.5);
            z-index: 9998;
        }

        .sidebar-overlay.active {
            display: block;
        }

        @@keyframes slideInLeft {
            from {
                transform: translateX(-280px);
            }
            to {
                transform: translateX(0);
            }
        }

        /* Hide user info in header on mobile */
        @@media (max-width: 768px) {
            .mobile-menu-btn {
                display: block !important;
                order: -1;
            }

            .user-info {
                display: none !important;
            }

            .btn-logout {
                display: none !important;
            }

            .nav-links {
                display: none !important;
            }

            .auth-buttons {
                display: none !important;
            }
        }
    </style>
</head>
<body>
    <!-- Mobile Sidebar -->
    <div id="mobileSidebar" class="mobile-sidebar">
        <div class="sidebar-header">
            <a href="/" class="logo">
                <i class="fas fa-play-circle"></i>
                <span>StripFaces</span>
            </a>
            <button class="sidebar-close" onclick="toggleSidebar()">×</button>
        </div>

        @{
            // Get session values
            var userId = HttpContextAccessor.HttpContext?.Session.GetString("UserId");
            var username = HttpContextAccessor.HttpContext?.Session.GetString("Username");
            var role = HttpContextAccessor.HttpContext?.Session.GetString("Role");
        }

        @if (!string.IsNullOrEmpty(userId))
        {
            <div class="sidebar-user">
                <div class="user-avatar-sidebar">
                    @username?[0]
                </div>
                <div class="sidebar-user-info">
                    <p class="sidebar-user-name">@username</p>
                    <p class="sidebar-user-role">@role</p>
                </div>
            </div>

            <div class="sidebar-footer">
                <a href="@Url.Action("Logout", "Auth")" class="btn-logout-sidebar">
                    <i class="fas fa-sign-out-alt"></i> Logout
                </a>
            </div>
        }
        else
        {
            <div class="sidebar-footer sidebar-auth-buttons">
                <a href="@Url.Action("Login", "Auth")" class="btn-sidebar-login">
                    <i class="fas fa-sign-in-alt"></i> Login
                </a>
                <a href="@Url.Action("Register", "Auth")" class="btn-sidebar-register">
                    <i class="fas fa-user-plus"></i> Register
                </a>
            </div>
        }
    </div>

    <!-- Mobile Overlay -->
    <div id="sidebarOverlay" class="sidebar-overlay" onclick="toggleSidebar()"></div>

    @{
        // Get session values
        var userId2 = HttpContextAccessor.HttpContext?.Session.GetString("UserId");
        var username2 = HttpContextAccessor.HttpContext?.Session.GetString("Username");
        var role2 = HttpContextAccessor.HttpContext?.Session.GetString("Role");
        var isLoggedIn2 = ViewData["IsLoggedIn"] as bool? ?? false;
    }

    <header>
        <div class="nav-container">
            <button class="mobile-menu-btn" onclick="toggleSidebar()">
                <i class="fas fa-bars"></i>
            </button>

            <a href="/" class="logo">
                <i class="fas fa-play-circle"></i>
                <span>StripFaces</span>
            </a>

            <div class="nav-links">
                @if (isLoggedIn2)
                {
                    @if (role2 == "admin")
                    {
                        <a href="/Admin">
                            <i class="fas fa-tachometer-alt"></i> <span>Dashboard</span>
                        </a>
                    }
                }
                else
                {
                    <div class="home-button">                   <a href="/">
                        <i class="fas fa-home"></i> <span>Home</span>
                    </a>
                    </div>
                }

                <div class="auth-buttons">
                    @if (string.IsNullOrEmpty(userId2))
                    {
                        <a href="@Url.Action("Login", "Auth")" class="btn-login">
                            <i class="fas fa-sign-in-alt"></i>
                            Login
                        </a>
                        <a href="@Url.Action("Register", "Auth")" class="btn-register">
                            <i class="fas fa-user-plus"></i>
                            Register
                        </a>
                    }
                    else
                    {
                        <div class="user-info">
                            <div class="user-avatar">
                                @username2?[0]
                            </div>
                            <span>@username2</span>
                        </div>
                        <a href="@Url.Action("Logout", "Auth")" class="btn-logout">
                            <i class="fas fa-sign-out-alt"></i>
                            Logout
                        </a>
                    }
                </div>
            </div>
        </div>
    </header>

    <main>
        @RenderBody()
    </main>

    <footer>
        <p>&copy; @DateTime.Now.Year StripFaces - Video Streaming Platform. All rights reserved.</p>
        @{
            var footerUserId = HttpContextAccessor.HttpContext?.Session.GetString("UserId");
            var footerUsername = HttpContextAccessor.HttpContext?.Session.GetString("Username");
            var footerRole = HttpContextAccessor.HttpContext?.Session.GetString("Role");
        }
        @if (!string.IsNullOrEmpty(footerUserId))
        {
            <p style="margin-top: 0.5rem; font-size: 0.875rem;">
                Logged in as: <strong>@footerUsername</strong> <span style="color: var(--yellow-primary);">(@footerRole)</span>
            </p>
        }
        else
        {
            <p style="margin-top: 0.5rem; font-size: 0.875rem;">
                Not logged in. <a href="@Url.Action("Login", "Auth")">Sign in</a> to access your dashboard.
            </p>
        }
    </footer>

    <script>
        // Sidebar toggle functions
        function toggleSidebar() {
            const sidebar = document.getElementById('mobileSidebar');
            const overlay = document.getElementById('sidebarOverlay');
            if (sidebar && overlay) {
                sidebar.classList.toggle('active');
                overlay.classList.toggle('active');
            }
        }

        function closeSidebar() {
            const sidebar = document.getElementById('mobileSidebar');
            const overlay = document.getElementById('sidebarOverlay');
            if (sidebar && overlay) {
                sidebar.classList.remove('active');
                overlay.classList.remove('active');
            }
        }

        // Close sidebar when clicking outside
        const overlay = document.getElementById('sidebarOverlay');
        if (overlay) {
            overlay.addEventListener('click', closeSidebar);
        }

        // Close sidebar when clicking a link
        const sidebarLinks = document.querySelectorAll('.mobile-sidebar a');
        sidebarLinks.forEach(link => {
            link.addEventListener('click', closeSidebar);
        });
    </script>
</body>
</html>